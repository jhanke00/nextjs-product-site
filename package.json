{
  "name": "next-product-site",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "build": "next build",
    "format": "prettier . --write",
    "preinstall": "only-allow pnpm",
    "test": "jest ",
    "test-integration": "pnpm test -- -c ./jest-integration-config.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "generate-large-data": "node ./scripts/generateLargeData.js",
    "generate-small-data": "node ./scripts/generateSmallData.js",
    "docker-build": "docker-compose -f infra/docker-compose.yml build",
    "docker-up": "docker-compose -f infra/docker-compose.yml up",
    "docker-down": "docker-compose -f infra/docker-compose.yml down",
    "docker-restart": "docker-compose -f infra/docker-compose.yml restart",
    "docker-logs": "docker-compose -f infra/docker-compose.yml logs",
    "docker-exec": "docker-compose -f infra/docker-compose.yml exec nextjs sh"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "joi": "^17.13.3",
    "mongoose": "^8.6.3",
    "next": "14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@storybook/addon-essentials": "^7.6.15",
    "@storybook/addon-interactions": "^7.6.15",
    "@storybook/addon-links": "^7.6.15",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/blocks": "^7.6.15",
    "@storybook/nextjs": "^7.6.15",
    "@storybook/react": "^7.6.15",
    "@storybook/test": "^7.6.15",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "only-allow": "^1.2.1",
    "postcss": "^8.4.35",
    "prettier": "3.2.5",
    "storybook": "^7.6.15",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
